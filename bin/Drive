# be bound by those terms.
#*****************************************************************************
# 
# Emulate all the interfaces of the DriveParticipantLib service using
# rtiddsprototyper with Lua to write dummy data.
#
# USAGE:
#     $DATABUSHOME/bin/run Drive ./bin/drive [domainId]
#*****************************************************************************

if [ "${NDDSHOME}" = "" ]; then echo "NDDSHOME Undefined!" ; exit 1; fi

# Arguments
DOMAIN_ID=${1:-0}

# Service Components to launch
COMPONENTS=""
COMPONENTS+=" DriveParticipantLib::Camera "
COMPONENTS+=" DriveParticipantLib::Lidar "
COMPONENTS+=" DriveParticipantLib::Perceptor "
COMPONENTS+=" DriveParticipantLib::Planner "
COMPONENTS+=" DriveParticipantLib::Actuator "
COMPONENTS+=" DriveParticipantLib::HMI "
COMPONENTS+=" DriveParticipantLib::CANGateway "
COMPONENTS+=" DriveParticipantLib::CANComponent "
COMPONENTS+=" DriveParticipantLib::Tunnel "

echo "COMPONENTS = $COMPONENTS"

# Launch the components emulated using Lua
i=0
for component in ${COMPONENTS} 
do
    echo "$component"
    $NDDSHOME/bin/rtiddsprototyper \
        -luaOnData 0 \
        -luaFile src/utils/Publisher.lua \
        -domainId ${DOMAIN_ID} \
        -cfgName $component &
    COMPONENT_PID[$i]=$!
    echo "   PID = ${COMPONENT_PID[$i]}"
    i=$((i+1))
done

# wait for the user to terminate this shell process
while :
do
    sleep 1
done

# Kill the components
trap "{
i=0
for component in ${COMPONENTS} 
do
    echo "Killing: $component, PID = ${COMPONENT_PID[$i]}"
    kill -9 ${COMPONENT_PID[$i]}
    i=$((i+1))
done
}" EXIT
