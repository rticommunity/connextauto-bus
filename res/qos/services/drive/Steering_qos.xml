<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/7.3.0/rti_dds_qos_profiles.xsd">

  <configuration_variables>
    <value>
      <element>
        <name>STEERING_CONTROLLER_STRENGTH</name>
        <value>1</value>
      </element>
    </value>
  </configuration_variables>

  <qos_library name="DriveQosLib">

    <qos_profile name="Steering" base_name="_root_">

      <!-- Topic specific QosProfile, common across all the interfaces -->
      <datawriter_qos topic_filter="Command/Steering">
        <ownership_strength>
          <value>$(STEERING_CONTROLLER_STRENGTH)</value>
        </ownership_strength>
      </datawriter_qos>
      <datareader_qos topic_filter="Command/Steering">
      </datareader_qos>

    </qos_profile>


    <!-- Default Participant Factory -->
    <qos_profile name="Factory.Default" is_default_participant_factory_profile="true">
      <base_name>
        <element>SnippetQosLib::Factory.NoAutoEnable</element>
      </base_name>
    </qos_profile>

  </qos_library>

</dds>
