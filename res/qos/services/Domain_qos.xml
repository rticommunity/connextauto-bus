<!--
-*****************************************************************************
                        Domain QoS Profiles

- Defines a topic specific service qos profile
- Domain wide base profile, used across all participants
-*****************************************************************************
-->
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/7.3.0/rti_dds_qos_profiles.xsd">

  <!-- Service QosProfiles -->
  <qos_library name="DomainQosLib">

    <!-- Topic specific QosProfile, common across all the interfaces -->
    <qos_profile name="_root_">

      <!-- Data Readers -->
      <datareader_qos base_name="FlowQosLib::Stream" topic_filter="Stream/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Event" topic_filter="Event/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Alarm" topic_filter="Alarm/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Command" topic_filter="Command/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Status" topic_filter="Status/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::State" topic_filter="State/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Configuration" topic_filter="Config/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Log" topic_filter="Log/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Request" topic_filter="Service/Request/*">
      </datareader_qos>
      <datareader_qos base_name="FlowQosLib::Response" topic_filter="Service/Response/*">
      </datareader_qos>
      <!-- Catch all -->
      <datareader_qos base_name="FlowQosLib::Stream" topic_filter="*">
      </datareader_qos>

      <!-- Data Writers -->
      <datawriter_qos base_name="FlowQosLib::Stream" topic_filter="Stream/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Event" topic_filter="Event/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Alarm" topic_filter="Alarm/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Command" topic_filter="Command/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Status" topic_filter="Status/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::State" topic_filter="State/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Configuration" topic_filter="Config/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Log" topic_filter="Log/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Request" topic_filter="Service/Request/*">
      </datawriter_qos>
      <datawriter_qos base_name="FlowQosLib::Response" topic_filter="Service/Response/*">
      </datawriter_qos>
      <!-- Catch all -->
      <datawriter_qos base_name="FlowQosLib::Stream" topic_filter="*">
      </datawriter_qos>
    </qos_profile>
  </qos_library>

</dds>
