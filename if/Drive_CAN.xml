<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/7.3.0/rti_dds_profiles.xsd">

    <!-- CAN Service -->
    <domain_participant_library name="DriveParticipantLib">

        <!-- CAN Gateway interface -->
        <domain_participant name="CANGateway" domain_ref="DomainLib::CAN">
            <!-- Inputs -->
            <subscriber name="inputs">
                <data_reader name="SignalInfo_reader" topic_ref="Config/SignalInfo">
                    <datareader_qos base_name="DriveParticipantQosLib::CANGateway" />
                </data_reader>
                <data_reader name="Signal_reader" topic_ref="Status/SignalOut">
                    <datareader_qos base_name="DriveParticipantQosLib::CANGateway" />
                </data_reader>
                <subscriber_qos base_name="DriveParticipantQosLib::CANGateway" />
            </subscriber>
            <!-- Outputs -->
            <publisher name="outputs">
                <data_writer name="Signal_writer" topic_ref="Status/SignalIn">
                    <datawriter_qos base_name="DriveParticipantQosLib::CANGateway" />
                </data_writer>
                <publisher_qos base_name="DriveParticipantQosLib::CANGateway" />
            </publisher>
            <participant_qos base_name="DriveParticipantQosLib::CANGateway" />
        </domain_participant>

        <!-- CAN Component interface -->
        <domain_participant name="CANComponent" domain_ref="DomainLib::CAN">
            <!-- Inputs -->
            <subscriber name="inputs">
                <data_reader name="SignalInfo_reader" topic_ref="Config/SignalInfo">
                    <datareader_qos base_name="DriveParticipantQosLib::CANComponent" />
                </data_reader>
                <data_reader name="Signal_reader" topic_ref="Status/SignalIn">
                    <datareader_qos base_name="DriveParticipantQosLib::CANComponent" />
                </data_reader>
                <subscriber_qos base_name="DriveParticipantQosLib::CANComponent" />
            </subscriber>
            <!-- Outputs -->
            <publisher name="outputs">
                <data_writer name="Signal_writer" topic_ref="Status/SignalOut">
                    <datawriter_qos base_name="DriveParticipantQosLib::CANComponent" />
                </data_writer>
                <publisher_qos base_name="DriveParticipantQosLib::CANComponent" />
            </publisher>
            <participant_qos base_name="DriveParticipantQosLib::CANComponent" />
        </domain_participant>

        <!-- CAN Tunnel interface -->
        <domain_participant name="CANTunnel" domain_ref="DomainLib::CAN">
            <!-- Inputs -->
            <subscriber name="inputs">
                <data_reader name="Frame_reader" topic_ref="Stream/FrameIn">
                    <datareader_qos base_name="DriveParticipantQosLib::CANTunnel" />
                </data_reader>
                <subscriber_qos base_name="DriveParticipantQosLib::CANTunnel" />
            </subscriber>
            <!-- Outputs -->
            <publisher name="outputs">
                <data_writer name="Frame_writer" topic_ref="Stream/FrameOut">
                    <datawriter_qos base_name="DriveParticipantQosLib::CANTunnel" />
                </data_writer>
                <publisher_qos base_name="DriveParticipantQosLib::CANTunnel" />
            </publisher>
            <participant_qos base_name="DriveParticipantQosLib::CANTunnel" />
        </domain_participant>

    </domain_participant_library>
</dds>
